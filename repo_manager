#!/usr/bin/bash

REPO_ROOT=$(dirname $(realpath $0))
REPO_NAME='personal'

# TODO: parse args to decide which build mode to execute in
# -a --all (default) | -s --single
# -n --normal (default) | -f --force

# export MAKEPKG_CONF="$REPO_ROOT/makepkg.conf"
export PKGDEST="$REPO_ROOT/repo/x86_64"
export PACKAGER="$(git config user.name) <$(git config user.email)>"

build_pkgbuild() {
  MAKEPKG_FLAGS=${1:-'-scC'}

  if [ -e $($REPO_ROOT/lib/aur-build--pkglist) ]; then
    echo "package build is up to date"
  else
    makepkg $MAKEPKG_FLAGS
    # remove build products
    git clean -di
  fi
}

build_all_pkgs() {
  for pkgfile_dir in $REPO_ROOT/pkgfiles/*/; do
    pkg=$(basename $pkgfile_dir)
    echo "building $pkg"
    cd "$REPO_ROOT/pkgfiles/$pkg"
    build_pkgbuild
  done
}

build_single_pkg() {
  PKG_NAME=${1:-''}
  pkg=$(find $REPO_ROOT/pkgfiles -maxdepth 1 -printf '%P\n' | fzf -1 -0 -q $PKG_NAME)

  echo "building $pkg"
  cd "$REPO_ROOT/pkgfiles/$pkg"
  build_pkgbuild
}

build_db() {
  cd $PKGDEST
  repo-add "$REPO_NAME.db.tar.gz" *.pkg.tar.zst

  # remove unwanted files
  UNWANTED_FILES=(
    $REPO_NAME.db
    $REPO_NAME.files
    $REPO_NAME.db.tar.gz.old
    $REPO_NAME.files.tar.gz.old
  )

  for p in ${UNWANTED_FILES[@]}; do
    if [ -e $p ]; then
      rm $p
    fi
  done

  # rename databases
  mv $REPO_NAME.db.tar.gz $REPO_NAME.db
  mv $REPO_NAME.files.tar.gz $REPO_NAME.files
}

# build_single_pkg shortsig
# build_single_pkg
build_all_pkgs
build_db
