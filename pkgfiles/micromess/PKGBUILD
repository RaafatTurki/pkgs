# Maintainer: Raafat Turki <raafat.turki@pm.me>

pkgname=micromess
pkgver=0.1
pkgrel=2
pkgdesc="A simple X pop-up"
arch=('x86_64')
license=('MIT')
source=("git+https://github.com/kompoth/micromess.git")
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"

  mkdir -p $pkgdir/usr/bin
  cp -r umess $pkgdir/usr/bin

  mkdir -p $pkgdir/usr/local/man/man1
  cp -r umess.1 $pkgdir/usr/local/man/man1
}
