# Maintainer: Raafat Turki <raafat.turki@protonmail.com>

pkgname=flat-remix-custom-gtk-theme
pkgver=1.0
pkgrel=1
arch=(any)
pkgdesc="a system wide theme solution covering gtk2, gtk3 and qt (gtk4 soon)"
source=("https://github.com/daniruiz/flat-remix-gtk/archive/refs/heads/master.zip")
sha256sums=("SKIP")
depends=("qt5-styleplugins")
makedepends=("sassc" "optipng" "inkscape")

build() {
    cd "${srcdir}/flat-remix-gtk-master/"
    ./generate-color-theme.sh SystemWide '#43286b' '#FEFFFF'
}

package() {
    cd "${srcdir}/flat-remix-gtk-master/themes"

    theme_folders=(
    Flat-Remix-GTK-SystemWide-Dark
    Flat-Remix-GTK-SystemWide-Dark-Solid
    Flat-Remix-GTK-SystemWide-Light
    Flat-Remix-GTK-SystemWide-Light-Solid
    )

    for tf in ${theme_folders[@]}; do
        mkdir -p $pkgdir/usr/share/themes/$tf
        cp -r $tf $pkgdir/usr/share/themes
    done
}
